<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/drawer_layout_aboutus"
        tools:context=".AboutUsActivity">
    <TextView
            android:text="@string/about_us_text"
            android:layout_width="0dp"
            android:layout_height="367dp" android:id="@+id/aboutUs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:textAppearance="@android:style/TextAppearance.Material" android:textAlignment="viewStart"
            android:textSize="18sp" android:fontFamily="sans-serif"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/link_ISIC"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/isicLink" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/aboutUs"
            app:layout_constraintBottom_toTopOf="@+id/gitLink"/>
    <TextView
            android:text="@string/git_dangermole"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/gitLink" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/isicLink" android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>